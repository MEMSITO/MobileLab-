<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInput"
        android:layout_width="391dp"
        android:layout_height="248dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#818CF8"
        android:backgroundTintMode="add"
        android:fontFamily="@font/pangolin"
        android:hint="Введите текст"
        android:textAlignment="center"
        android:textColor="#F5F7FA"
        android:textColorHint="#F5F7FA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="269dp"
        android:layout_height="87dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#818CF8"
        android:fontFamily="@font/pangolin"
        android:text="Ввести"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F5F7FA"
        android:textColorLink="#6900F0"
        android:textSize="34sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput" />

    <EditText
        android:id="@+id/textViewCountOfEachWord"
        android:layout_width="391dp"
        android:layout_height="248dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="#818CF8"
        android:clickable="false"
        android:contextClickable="false"
        android:editable="false"
        android:ems="10"
        android:fontFamily="@font/pangolin"
        android:forceHasOverlappingRendering="false"
        android:gravity="start|top"
        android:hint="Пусто"
        android:textAlignment="center"
        android:textColor="#F5F7FA"
        android:textColorHint="#F5F7FA"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterButton" />

</androidx.constraintlayout.widget.ConstraintLayout>